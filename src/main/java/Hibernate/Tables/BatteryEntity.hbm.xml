<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Hibernate.Tables.BatteryEntity" table="Battery" schema="dbo" catalog="PolessBattery">
        <id name="batteryId">
            <column name="BatteryID" sql-type="int"/>
        </id>
        <property name="mark">
            <column name="Mark" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="capacity">
            <column name="Capacity" sql-type="float" precision="-1"/>
        </property>
        <property name="amperage">
            <column name="Amperage" sql-type="float" precision="-1"/>
        </property>
    </class>
</hibernate-mapping>