<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Hibernate.Tables.CustomersEntity" table="Customers" schema="dbo" catalog="PolessBattery">
        <id name="customerId">
            <column name="CustomerID" sql-type="int"/>
        </id>
        <property name="organizationName">
            <column name="OrganizationName" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="address">
            <column name="Address" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="contactPerson">
            <column name="ContactPerson" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="phone">
            <column name="Phone" sql-type="varchar(15)" length="15" not-null="true"/>
        </property>
        <property name="eMail">
            <column name="E-mail" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>