<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Hibernate.Tables.EmployeesEntity" table="Employees" schema="dbo" catalog="PolessBattery">
        <id name="employeeId">
            <column name="EmployeeID" sql-type="int"/>
        </id>
        <property name="surname">
            <column name="Surname" sql-type="varchar(15)" length="15"/>
        </property>
        <property name="name">
            <column name="Name" sql-type="varchar(15)" length="15"/>
        </property>
        <property name="patronymic">
            <column name="Patronymic" sql-type="varchar(15)" length="15"/>
        </property>
        <property name="specialty">
            <column name="Specialty" sql-type="varchar(15)" length="15"/>
        </property>
        <property name="rank">
            <column name="Rank" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="address">
            <column name="Address" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="phone">
            <column name="Phone" sql-type="varchar(15)" length="15" not-null="true"/>
        </property>
        <property name="eMail">
            <column name="E-mail" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="dateRecruitment">
            <column name="DateRecruitment" sql-type="date"/>
        </property>
    </class>
</hibernate-mapping>