<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Hibernate.Tables.PolarityEntity" table="Polarity" schema="dbo" catalog="PolessBattery">
        <id name="polarityId">
            <column name="PolarityID" sql-type="int"/>
        </id>
        <property name="namePolarity">
            <column name="NamePolarity" sql-type="varchar(15)" length="15"/>
        </property>
    </class>
</hibernate-mapping>